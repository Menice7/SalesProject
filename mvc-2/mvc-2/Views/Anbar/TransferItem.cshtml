@{
    Layout = "_Layout";
}
@model Filial

<h1>Transfer Item</h1>

<form method="post" asp-controller="Anbar" asp-action="Transfer">
    <div class="form-group">
        <input asp-for="ItemId" type="text" hidden class="form-control" id="itemId" placeholder="Ad daxil edin">
    </div>

    <div class="form-group">
        <label for="FIlialId">Filial</label>
        <select asp-for="FilialId" class="form-control" asp-items="@(new SelectList(Model.Filiallar,"FilialId","FilialAd"))"></select>
    </div>

    <div class="form-group">
        <label for="say">Say</label>
        <input asp-for="Say" type="number" class="form-control" id="say" placeholder="Sayı daxil edin">
        <span asp-validation-for="Say" style="color:red"></span>
    </div>
    <button type="submit" style="float:right" class="btn btn-success">Köçür</button>
</form>